<div class="container d-flex flex-column justify-content-center vh-100">
  <h1 class="text-center">URL Shortener</h1>
  <i class="text-center fas fa-link fa-7x"></i>
  <form action="/" method="POST" class="w-75 mt-5 mx-auto d-flex flex-column align-items-center">
    <div class="form-group w-100">
      <label for="url" class="sr-only"></label>
      <input type="url" name="url" id="url" class="form-control" placeholder="Input URL here" required>
    </div>
    <button class="btn btn-outline-primary w-50">Shorten</button>
  </form>
</div>